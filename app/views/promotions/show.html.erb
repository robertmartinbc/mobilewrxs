<h1><%= @promotion.title %></h1>
<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@promotion.user.avatar.tiny.url) if @promotion.user.avatar? %>
      submitted <%= time_ago_in_words(@promotion.created_at) %> ago by 
      <%= @promotion.user.name %>
    </small>    
    
  </div>
<% if can? :edit, @promotion %>
<%= link_to "Edit", edit_promotion_path(@promotion), class: 'btn btn-mini' %>
<% end %>
<p><%= @promotion.body %></p>
